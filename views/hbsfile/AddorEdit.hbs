<h3>{{viewTitle}}</h3>

<form action="/user"  method="POST" autocomplete="off">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Name" value="{{userData.fullname}}">
        <div class="text-danger">
            {{userData.fullnameError}}
        </div>  
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="password" 
        value="{{userData.password}}">
        <div class="text-danger">
            {{userData.passwordError}}
        </div>    
    </div>
    <div class="form-group">
        <label >Type</label>
        <select name="type">
            <option disabled>Choose One</option>
            <option>A</option>
            <option>B</option>
            <option>C</option>

        </select>  
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-info" >
            Register
        </button> 
        <a class="btn btn-secondary" href="/user/login">
            <i class="fa fa-list-alt">
                Login
            </i>
        </a>
        
    </div>
</form>